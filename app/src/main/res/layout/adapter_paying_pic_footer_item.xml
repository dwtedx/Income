<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="4dp"
    android:paddingStart="4dp"
    android:paddingRight="4dp"
    android:paddingEnd="4dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <!-- PieChart 原来是8dp 放大50%-->
    <TextView
        android:id="@+id/m_item_color_view"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@color/common_color_white" />

    <TextView
        android:id="@+id/m_item_desc_view"
        style="@style/common_text_style_14_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_margin_6dp"
        android:layout_marginLeft="@dimen/common_margin_6dp"
        android:text="@string/app_name"
        android:textSize="@dimen/common_text_size_12sp" />

</LinearLayout>

