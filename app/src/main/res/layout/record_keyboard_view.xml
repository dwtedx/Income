                <Button
                    android:id="@+id/m_record_input_subtract"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginStart="@dimen/common_margin_6dp"
                    android:layout_marginLeft="@dimen/common_margin_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_button_all"
                    android:gravity="center"
                    android:tag="@string/record_input_subtract"
                    android:text="@string/record_input_subtract"
                    android:textSize="@dimen/common_text_size_16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/common_margin_16dp"
            android:paddingLeft="@dimen/common_margin_16dp"
            android:paddingTop="@dimen/common_margin_6dp"
            android:paddingEnd="@dimen/common_margin_16dp"
            android:paddingRight="@dimen/common_margin_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/m_record_input_point"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_button_all"
                    android:gravity="center"
                    android:tag="@string/record_input_point"
                    android:text="@string/record_input_point"
                    android:textSize="@dimen/common_text_size_16sp" />

                <Button
                    android:id="@+id/m_record_input_0"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginStart="@dimen/common_margin_6dp"
                    android:layout_marginLeft="@dimen/common_margin_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_button_all"
                    android:gravity="center"
                    android:tag="@string/record_input_0"
                    android:text="@string/record_input_0"
                    android:textSize="@dimen/common_text_size_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/m_record_input_c"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginStart="@dimen/common_margin_6dp"
                    android:layout_marginLeft="@dimen/common_margin_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_button_all"
                    android:gravity="center"
                    android:tag="@string/record_input_c"
                    android:text="@string/record_input_c"
                    android:textSize="@dimen/common_text_size_16sp" />

                <Button
                    android:id="@+id/m_record_input_save"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginStart="@dimen/common_margin_6dp"
                    android:layout_marginLeft="@dimen/common_margin_6dp"
                    android:layout_weight="1"
