                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginStart="@dimen/common_margin_6dp"
                    android:layout_marginLeft="@dimen/common_margin_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_button_all"
                    android:gravity="center"
                    android:tag="@string/record_input_8"
                    android:text="@string/record_input_8"
                    android:textSize="@dimen/common_text_size_16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/m_record_input_9"
                    style="@style/common_text_style_14_333333"
