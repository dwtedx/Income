<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/record_type_credit_card_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_above="@+id/record_input_view"
        android:background="@color/common_background_color">

        <LinearLayout
            style="@style/common_horizontal_division_line_style"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/m_record_remark"
            android:layout_toLeftOf="@+id/m_record_remark"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/m_record_type_credit_card"
                style="@style/common_text_style_14_333333"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="@drawable/button_white_bg"
                android:gravity="center"
                android:textSize="@dimen/common_text_size_14sp" />

            <TextView
                android:id="@+id/m_record_type_time"
                style="@style/common_text_style_14_333333"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginStart="@dimen/common_margin_16dp"
                android:layout_marginLeft="@dimen/common_margin_16dp"
                android:layout_weight="1"
                android:background="@drawable/button_white_bg"
                android:gravity="center"
                android:textColor="@color/common_body_color"
                android:textSize="@dimen/common_text_size_14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/m_record_remark"
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_remark_vector_black" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/record_input_view"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_background_color"
        android:orientation="vertical">

        <LinearLayout style="@style/common_horizontal_division_line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/common_margin_16dp"
            android:paddingLeft="@dimen/common_margin_16dp"
            android:paddingTop="@dimen/common_margin_6dp"
            android:paddingEnd="@dimen/common_margin_16dp"
            android:paddingRight="@dimen/common_margin_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/m_record_input_1"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_button_all"
                    android:gravity="center"
                    android:tag="@string/record_input_1"
                    android:text="@string/record_input_1"
                    android:textSize="@dimen/common_text_size_16sp" />

                <Button
                    android:id="@+id/m_record_input_2"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginStart="@dimen/common_margin_6dp"
                    android:layout_marginLeft="@dimen/common_margin_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_button_all"
                    android:gravity="center"
                    android:tag="@string/record_input_2"
                    android:text="@string/record_input_2"
                    android:textSize="@dimen/common_text_size_16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/m_record_input_3"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginStart="@dimen/common_margin_6dp"
                    android:layout_marginLeft="@dimen/common_margin_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_button_all"
                    android:gravity="center"
                    android:tag="@string/record_input_3"
                    android:text="@string/record_input_3"
                    android:textSize="@dimen/common_text_size_16sp" />

                <Button
                    android:id="@+id/m_record_input_back"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginStart="@dimen/common_margin_6dp"
                    android:layout_marginLeft="@dimen/common_margin_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_button_all"
                    android:gravity="center"
                    android:tag="@string/record_input_back"
                    android:text="@string/record_input_back"
                    android:textSize="@dimen/common_text_size_16sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/common_margin_16dp"
            android:paddingLeft="@dimen/common_margin_16dp"
            android:paddingTop="@dimen/common_margin_6dp"
            android:paddingEnd="@dimen/common_margin_16dp"
            android:paddingRight="@dimen/common_margin_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/m_record_input_4"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_button_all"
                    android:gravity="center"
                    android:tag="@string/record_input_4"
                    android:text="@string/record_input_4"
                    android:textSize="@dimen/common_text_size_16sp" />

                <Button
                    android:id="@+id/m_record_input_5"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginStart="@dimen/common_margin_6dp"
                    android:layout_marginLeft="@dimen/common_margin_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_button_all"
                    android:gravity="center"
                    android:tag="@string/record_input_5"
                    android:text="@string/record_input_5"
                    android:textSize="@dimen/common_text_size_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/m_record_input_6"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginStart="@dimen/common_margin_6dp"
                    android:layout_marginLeft="@dimen/common_margin_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_button_all"
                    android:gravity="center"
                    android:tag="@string/record_input_6"
                    android:text="@string/record_input_6"
                    android:textSize="@dimen/common_text_size_16sp" />

                <Button
                    android:id="@+id/m_record_input_add"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginStart="@dimen/common_margin_6dp"
                    android:layout_marginLeft="@dimen/common_margin_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_button_all"
                    android:gravity="center"
                    android:tag="@string/record_input_add"
                    android:text="@string/record_input_add"
                    android:textSize="@dimen/common_text_size_16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/common_margin_16dp"
            android:paddingLeft="@dimen/common_margin_16dp"
            android:paddingTop="@dimen/common_margin_6dp"
            android:paddingEnd="@dimen/common_margin_16dp"
            android:paddingRight="@dimen/common_margin_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/m_record_input_7"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_button_all"
                    android:gravity="center"
                    android:tag="@string/record_input_7"
