<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.dwtedx.income.widget.AppTitleBar
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_btn_text="@string/back"
        app:left_btn_visible="true"
        app:text="@string/login_text" />

    <LinearLayout
        style="@style/common_horizontal_division_line_style"
        android:layout_marginTop="@dimen/common_margin_12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/user_name_text"
            style="@style/common_text_style_14_333333"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:hint="@string/login_username_text"
            android:padding="@dimen/activity_vertical_margin"
            android:textAllCaps="false"
            android:textCursorDrawable="@null" />

    </LinearLayout>

    <LinearLayout style="@style/common_horizontal_division_line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/password_text"
            style="@style/common_text_style_14_333333"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:hint="@string/login_password_text"
            android:inputType="textPassword"
            android:padding="@dimen/activity_vertical_margin"
            android:text=""
            android:textAllCaps="false"
            android:textCursorDrawable="@null" />

    </LinearLayout>

    <LinearLayout style="@style/common_horizontal_division_line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_registered"
            style="@style/common_text_style_14_333333"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_margin_40dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/common_margin_12dp"
            android:text="@string/login_register" />

        <TextView
            android:id="@+id/forget_password"
            style="@style/common_text_style_14_333333"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_margin_40dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/common_margin_12dp"
            android:layout_marginLeft="@dimen/common_margin_12dp"
            android:text="@string/forget_password" />
    </LinearLayout>

    <Button
        android:id="@+id/login_save_btn"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_45dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_bg"
        android:text="@string/login_text"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/common_horizontal_division_line_style"
            android:layout_width="@dimen/common_margin_50dp" />

        <TextView
            style="@style/common_text_style_14_737373"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin_12dp"
            android:text="第三方登录" />

        <LinearLayout
            style="@style/common_horizontal_division_line_style"
            android:layout_width="@dimen/common_margin_50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_wechat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/common_margin_12dp"
            android:src="@drawable/umeng_socialize_wechat"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/login_qq"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/common_margin_12dp"
            android:layout_marginLeft="@dimen/common_margin_12dp"
            android:src="@mipmap/login_icon_qq" />

        <ImageView
            android:id="@+id/login_sina"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/common_margin_12dp"
            android:layout_marginLeft="@dimen/common_margin_12dp"
            android:src="@mipmap/login_icon_weibo" />

    </LinearLayout>

</LinearLayout>
