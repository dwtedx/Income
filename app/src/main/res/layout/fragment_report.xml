<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/report_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/report_all"
                style="@style/common_text_style_14_333333"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:textColor="@color/common_body_tip_colors"
                android:background="@drawable/button_white_bg"
                android:text="@string/report_all"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pie_chart_lable"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/report_paying_pie"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/common_body_color"
                    android:textSize="@dimen/common_text_size_16sp"/>

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/pie_chart_starttime"
                        style="@style/common_text_style_14_333333"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/common_margin_8dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/common_margin_8dp"
                        android:background="@drawable/button_white_bg"
                        android:gravity="center"
                        android:textColor="@color/common_body_color"
                        android:textSize="@dimen/common_text_size_14sp"/>

                    <TextView
                        style="@style/common_text_style_14_333333"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/common_margin_8dp"
                        android:layout_marginTop="@dimen/common_margin_8dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="@string/report_line"
                        android:textColor="@color/common_body_color"
                        android:textSize="@dimen/common_text_size_14sp"/>

                    <TextView
                        android:id="@+id/pie_chart_endtime"
                        style="@style/common_text_style_14_333333"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/common_margin_8dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/common_margin_8dp"
                        android:background="@drawable/button_white_bg"
                        android:gravity="center"
                        android:textColor="@color/common_body_color"
                        android:textSize="@dimen/common_text_size_14sp"/>

                </LinearLayout>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pie_chart"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/line_chart_lable"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/report_paying_line"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/common_body_color"
                    android:textSize="@dimen/common_text_size_16sp"/>

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/line_chart_starttime"
                        style="@style/common_text_style_14_333333"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/common_margin_8dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/common_margin_8dp"
                        android:background="@drawable/button_white_bg"
                        android:gravity="center"
                        android:textColor="@color/common_body_color"
                        android:textSize="@dimen/common_text_size_14sp"/>

                    <TextView
                        style="@style/common_text_style_14_333333"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/common_margin_8dp"
                        android:layout_marginTop="@dimen/common_margin_8dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="@string/report_line"
                        android:textColor="@color/common_body_color"
                        android:textSize="@dimen/common_text_size_14sp"/>

                    <TextView
                        android:id="@+id/line_chart_endtime"
                        style="@style/common_text_style_14_333333"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/common_margin_8dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/common_margin_8dp"
                        android:background="@drawable/button_white_bg"
                        android:gravity="center"
                        android:textColor="@color/common_body_color"
                        android:textSize="@dimen/common_text_size_14sp"/>

                </LinearLayout>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/line_chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pie_income_chart_lable"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/report_income_pie"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/common_body_color"
                    android:textSize="@dimen/common_text_size_16sp"/>

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/pie_income_chart_starttime"
                        style="@style/common_text_style_14_333333"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/common_margin_8dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/common_margin_8dp"
                        android:background="@drawable/button_white_bg"
                        android:gravity="center"
                        android:textColor="@color/common_body_color"
                        android:textSize="@dimen/common_text_size_14sp"/>

                    <TextView
                        style="@style/common_text_style_14_333333"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/common_margin_8dp"
                        android:layout_marginTop="@dimen/common_margin_8dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="@string/report_line"
                        android:textColor="@color/common_body_color"
                        android:textSize="@dimen/common_text_size_14sp"/>

                    <TextView
                        android:id="@+id/pie_income_chart_endtime"
                        style="@style/common_text_style_14_333333"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/common_margin_8dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/common_margin_8dp"
                        android:background="@drawable/button_white_bg"
                        android:gravity="center"
                        android:textColor="@color/common_body_color"
                        android:textSize="@dimen/common_text_size_14sp"/>

                </LinearLayout>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pie_income_chart"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bar_chart_lable"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/report_income_bar"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/common_body_color"
                    android:textSize="@dimen/common_text_size_16sp"/>

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bar_chart_starttime"
                        style="@style/common_text_style_14_333333"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/common_margin_8dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/common_margin_8dp"
                        android:background="@drawable/button_white_bg"
                        android:gravity="center"
                        android:textColor="@color/common_body_color"
                        android:textSize="@dimen/common_text_size_14sp"/>

                    <TextView
                        style="@style/common_text_style_14_333333"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/common_margin_8dp"
                        android:layout_marginTop="@dimen/common_margin_8dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="@string/report_line"
                        android:textColor="@color/common_body_color"
                        android:textSize="@dimen/common_text_size_14sp"/>

                    <TextView
                        android:id="@+id/bar_chart_endtime"
                        style="@style/common_text_style_14_333333"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/common_margin_8dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/common_margin_8dp"
                        android:background="@drawable/button_white_bg"
                        android:gravity="center"
                        android:textColor="@color/common_body_color"
                        android:textSize="@dimen/common_text_size_14sp"/>

                </LinearLayout>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bar_chart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>