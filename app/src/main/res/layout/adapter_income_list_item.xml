<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/common_margin_12dp"
    android:paddingBottom="@dimen/common_margin_12dp"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/time_textview"
            style="@style/common_text_style_14_737373"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05-23 22:34"/>

        <TextView
            android:id="@+id/account_textview"
            style="@style/common_text_style_14_737373"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/account_type_title"/>

        <TextView
            android:id="@+id/role_textview"
            style="@style/common_text_style_14_737373"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/profile_type_income"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/type_imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_shouru_type_gongzi"/>

            <TextView
                android:id="@+id/type_textView"
                style="@style/common_text_style_14_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin_12dp"
                android:layout_marginStart="@dimen/common_margin_12dp"
                android:text="@string/record_shouru_type_gongzi"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/common_body_color"
                android:textSize="@dimen/common_text_size_16sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/money_textview"
            style="@style/common_text_style_14_737373"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="0.00"
            android:textColor="@color/common_body_color"
            android:textSize="@dimen/common_text_size_16sp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/remark_textview_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_8dp">

        <TextView
            android:id="@+id/remark_textview"
            style="@style/common_text_style_14_737373"
            android:layout_width="wrap_content"
            android:text="@string/record_remark"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
