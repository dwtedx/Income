<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_content"
        style="@style/common_text_style_14_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/common_margin_8dp"
        android:layout_marginRight="@dimen/common_margin_8dp"
        android:layout_marginTop="@dimen/common_margin_8dp"
        android:background="@drawable/gray_line_shape"
        android:gravity="center"
        android:padding="@dimen/common_margin_8dp"
    />
</LinearLayout>