<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.dwtedx.income.profile.PassWordActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.dwtedx.income.widget.AppTitleBar
            android:id="@+id/app_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:left_btn_text="@string/back"
            app:left_btn_visible="true"
            app:right_btn_visible="true"
            app:right_btn_text="@string/forget_password"
            app:text="@string/profile_password_title_update" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:id="@+id/profile_password_line"
                style="@style/common_horizontal_division_line_style" />

            <RelativeLayout
                android:id="@+id/profile_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/profile_password"
                    style="@style/common_text_style_14_737373"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/profile_password" />

                <EditText
                    android:id="@+id/profile_password_text"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/profile_password"
                    android:layout_toRightOf="@+id/profile_password"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:gravity="center_vertical|end"
                    android:hint="@string/user_hint"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:textAllCaps="false"
                    android:textCursorDrawable="@null" />

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/profile_password_new"
                    style="@style/common_text_style_14_737373"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/profile_password_new" />

                <EditText
                    android:id="@+id/profile_password_new_text"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/profile_password_new"
                    android:layout_toRightOf="@+id/profile_password_new"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:gravity="center_vertical|end"
                    android:hint="@string/user_hint"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:textAllCaps="false"
                    android:textCursorDrawable="@null" />

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/profile_password_config"
                    style="@style/common_text_style_14_737373"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/profile_password_config" />

                <EditText
                    android:id="@+id/profile_password_config_text"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/profile_password_config"
                    android:layout_toRightOf="@+id/profile_password_config"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:gravity="center_vertical|end"
                    android:hint="@string/user_hint"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:textAllCaps="false"
                    android:textCursorDrawable="@null" />

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style" />

            <Button
                android:id="@+id/user_info_save_btn"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_margin_45dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/button_bg"
                android:text="@string/profile_into_edit_save"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>