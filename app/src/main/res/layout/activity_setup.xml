<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.dwtedx.income.profile.SetupActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.dwtedx.income.widget.AppTitleBar
            android:id="@+id/app_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:left_btn_text="@string/back"
            app:left_btn_visible="true"
            app:right_btn_visible="true"
            app:text="@string/nav_set" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout style="@style/common_horizontal_division_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/common_color_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/common_margin_20dp"
                    android:layout_height="@dimen/common_margin_20dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/fingerprint"
                    android:tint="@color/common_body_tip_colors" />

                <Button
                    android:id="@+id/profile_fingerprint_text"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/common_margin_12dp"
                    android:paddingLeft="@dimen/common_margin_30dp"
                    android:paddingRight="@dimen/common_margin_12dp"
                    android:paddingStart="@dimen/common_margin_30dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/profile_fingerprint"
                    android:textAllCaps="false" />

                <!--<TextView-->
                <!--style="@style/common_text_style_14_333333"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginEnd="24dp"-->
                <!--android:layout_marginRight="24dp"-->
                <!--android:padding="@dimen/activity_horizontal_margin"-->
                <!--android:text="@string/profile_fingerprint_tis"-->
                <!--android:textColor="@color/common_body_tip_color" />-->

                <Switch
                    android:id="@+id/profile_fingerprint_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="38dp"
                    android:layout_marginRight="38dp"
                    android:switchMinWidth="20dp"
                    android:textOff="off"
                    android:textOn="on"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/forward"
                    android:tint="@color/common_body_tip_colors" />

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/common_color_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/common_margin_20dp"
                    android:layout_height="@dimen/common_margin_20dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/nav_data"
                    android:tint="@color/common_body_tip_colors" />

                <Button
                    android:id="@+id/profile_data_text"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/common_margin_12dp"
                    android:paddingLeft="@dimen/common_margin_30dp"
                    android:paddingRight="@dimen/common_margin_12dp"
                    android:paddingStart="@dimen/common_margin_30dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/profile_data"
                    android:textAllCaps="false" />

                <TextView
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="@string/profile_data_text"
                    android:textColor="@color/common_body_tip_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/forward"
                    android:tint="@color/common_body_tip_colors" />

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style" />

            <LinearLayout
                style="@style/common_horizontal_division_line_style"
                android:layout_marginTop="@dimen/common_margin_12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/common_color_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/common_margin_20dp"
                    android:layout_height="@dimen/common_margin_20dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/nav_version"
                    android:tint="@color/common_body_tip_colors" />

                <Button
                    android:id="@+id/setup_update"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/common_margin_12dp"
                    android:paddingLeft="@dimen/common_margin_30dp"
                    android:paddingRight="@dimen/common_margin_12dp"
                    android:paddingStart="@dimen/common_margin_30dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/update" />

                <TextView
                    android:id="@+id/setup_version"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="@string/update"
                    android:textColor="@color/common_body_tip_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@mipmap/forward"
                    android:tint="@color/common_body_tip_colors" />

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/common_color_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/common_margin_20dp"
                    android:layout_height="@dimen/common_margin_20dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/nav_clean"
                    android:tint="@color/common_body_tip_colors" />

                <Button
                    android:id="@+id/clear_cache"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/common_margin_12dp"
                    android:paddingLeft="@dimen/common_margin_30dp"
                    android:paddingRight="@dimen/common_margin_12dp"
                    android:paddingStart="@dimen/common_margin_30dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/clear_cache" />

                <TextView
                    android:id="@+id/profile_clear_cache_text"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="wrap_content"
                    android:layout_alignEnd="@+id/profile_clear_cache_for"
                    android:layout_alignRight="@+id/profile_clear_cache_for"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="28dp"
                    android:layout_marginRight="28dp"
                    android:text="@string/clear_cache_text"
                    android:textColor="@color/common_body_tip_color" />

                <ImageView
                    android:id="@+id/profile_clear_cache_for"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@mipmap/forward"
                    android:tint="@color/common_body_tip_colors" />

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/common_color_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/common_margin_20dp"
                    android:layout_height="@dimen/common_margin_20dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/nav_share"
                    android:tint="@color/common_body_tip_colors" />

                <Button
                    android:id="@+id/share_app"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/common_margin_12dp"
                    android:paddingLeft="@dimen/common_margin_30dp"
                    android:paddingRight="@dimen/common_margin_12dp"
                    android:paddingStart="@dimen/common_margin_30dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/share_app" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@mipmap/forward"
                    android:tint="@color/common_body_tip_colors" />

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/common_color_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/common_margin_20dp"
                    android:layout_height="@dimen/common_margin_20dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/nav_score"
                    android:tint="@color/common_body_tip_colors" />

                <Button
                    android:id="@+id/setup_score"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/common_margin_12dp"
                    android:paddingLeft="@dimen/common_margin_30dp"
                    android:paddingRight="@dimen/common_margin_12dp"
                    android:paddingStart="@dimen/common_margin_30dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/setup_score" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@mipmap/forward"
                    android:tint="@color/common_body_tip_colors" />

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style" />

            <LinearLayout
                style="@style/common_horizontal_division_line_style"
                android:layout_marginTop="@dimen/common_margin_12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/common_color_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/common_margin_20dp"
                    android:layout_height="@dimen/common_margin_20dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/account_money"
                    android:tint="@color/common_body_tip_colors" />

                <Button
                    android:id="@+id/setup_user_agreement"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/common_margin_12dp"
                    android:paddingLeft="@dimen/common_margin_30dp"
                    android:paddingRight="@dimen/common_margin_12dp"
                    android:paddingStart="@dimen/common_margin_30dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/user_agreement" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@mipmap/forward"
                    android:tint="@color/common_body_tip_colors" />

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/common_color_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/common_margin_20dp"
                    android:layout_height="@dimen/common_margin_20dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/nav_feedback"
                    android:tint="@color/common_body_tip_colors" />

                <Button
                    android:id="@+id/message_recommendation"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/common_margin_12dp"
                    android:paddingLeft="@dimen/common_margin_30dp"
                    android:paddingRight="@dimen/common_margin_12dp"
                    android:paddingStart="@dimen/common_margin_30dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/message_recommendation" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@mipmap/forward"
                    android:tint="@color/common_body_tip_colors" />

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/common_color_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="@dimen/common_margin_20dp"
                    android:layout_height="@dimen/common_margin_20dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/nav_about"
                    android:tint="@color/common_body_tip_colors" />

                <Button
                    android:id="@+id/about_me"
                    style="@style/common_text_style_14_333333"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/common_margin_12dp"
                    android:paddingLeft="@dimen/common_margin_30dp"
                    android:paddingRight="@dimen/common_margin_12dp"
                    android:paddingStart="@dimen/common_margin_30dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/about_me" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@mipmap/forward"
                    android:tint="@color/common_body_tip_colors" />

            </RelativeLayout>

            <LinearLayout style="@style/common_horizontal_division_line_style" />

            <Button
                android:id="@+id/login_out"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_margin_45dp"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@drawable/button_bg"
                android:text="@string/profile_login_out"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>