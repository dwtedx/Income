<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/nav_header_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/account_money_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/account_money_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/account_money"/>

        <TextView
            android:id="@+id/account_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_vertical"
            android:text="0.00"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/common_text_size_22sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:src="@mipmap/edit_icon"/>

    </LinearLayout>

    <TextView
        style="@style/common_text_style_14_737373"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_money_view"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/account_list_balance"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/common_button_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/account_month_money_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/account_month_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="07"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/common_text_size_16sp"/>

            <TextView
                style="@style/common_text_style_14_737373"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_list_monty"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/common_button_color"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_month_paying_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/account_month_paying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0.00"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/common_text_size_16sp"/>

            <TextView
                style="@style/common_text_style_14_737373"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_list_paying"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/common_button_color"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_month_income_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/account_month_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0.00"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/common_text_size_16sp"/>

            <TextView
                style="@style/common_text_style_14_737373"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_list_income"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/common_button_color"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>